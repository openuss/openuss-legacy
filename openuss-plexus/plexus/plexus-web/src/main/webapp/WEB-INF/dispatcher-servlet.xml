<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean name="/enrollment.xml*" class="org.openuss.web.servlets.EnrollmentFeedController">	
		<property name="enrollmentFeed"><ref bean="enrollmentFeed"/></property>
	</bean>
	
	<bean name="/faculty.xml*" class="org.openuss.web.servlets.FacultyFeedController">	
		<property name="facultyFeed"><ref bean="facultyFeed"/></property>
	</bean>

	<bean name="enrollmentFeed" class="org.openuss.web.feeds.EnrollmentFeed">	
		<property name="newsService"><ref bean="newsService"/></property>
		<property name="systemService"><ref bean="systemService"/></property>
		<property name="enrollmentService"><ref bean="enrollmentService"/></property>
	</bean>

	<bean name="facultyFeed" class="org.openuss.web.feeds.FacultyFeed">	
		<property name="newsService"><ref bean="newsService"/></property>
		<property name="systemService"><ref bean="systemService"/></property>
		<property name="lectureService"><ref bean="lectureService"/></property>
	</bean>

	<bean name="discussionFeed" class="org.openuss.web.feeds.DiscussionFeed">	
		<property name="discussionService"><ref bean="discussionService"/></property>
		<property name="systemService"><ref bean="systemService"/></property>
		<property name="enrollmentService"><ref bean="enrollmentService"/></property>
	</bean>

	<bean name="mailingListFeed" class="org.openuss.web.feeds.MailingListFeed">	
		<property name="enrollmentMailingListService"><ref bean="enrollmentMailingListService"/></property>
		<property name="systemService"><ref bean="systemService"/></property>
		<property name="enrollmentService"><ref bean="enrollmentService"/></property>
	</bean>

</beans>
