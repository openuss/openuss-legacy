<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <!-- 
    	This PropertyOverrideConfigurer overrides property definies to be able to configure OpenUSS-Plexus
    	in just one central property file.
    -->
    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyOverrideConfigurer">
        <property name="locations">
            <list>
                <value>/WEB-INF/openuss.properties</value>
            </list>
        </property>
    </bean>
</beans>
