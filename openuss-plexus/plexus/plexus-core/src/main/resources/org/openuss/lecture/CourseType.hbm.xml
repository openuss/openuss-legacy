<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-cascade="none">
    <class name="org.openuss.lecture.CourseTypeImpl" table="LECTURE_COURSE_TYPE" dynamic-insert="false" dynamic-update="false">
        <cache usage="nonstrict-read-write" />
        <id name="id" type="java.lang.Long" unsaved-value="null">
            <column name="ID" sql-type="BIGINT"/>
            <generator class="sequence">
                <param name="sequence">GLOBAL_SEQUENCE</param>
            </generator>
        </id>
        <property name="name" type="java.lang.String">
            <column name="NAME" not-null="true" unique="false" sql-type="VARCHAR(250)"/>
        </property>
        <property name="shortcut" type="java.lang.String">
            <column name="SHORTCUT" not-null="true" unique="false" sql-type="VARCHAR(30)"/>
        </property>
        <property name="description" type="java.lang.String">
            <column name="DESCRIPTION" not-null="false" unique="false" sql-type="VARCHAR(32000)"/>
        </property>
        <bag name="courses" order-by="COURSE_TYPE_FK" lazy="true" fetch="select" inverse="true" cascade="all, delete-orphan">
            <cache usage="read-write" />
            <key foreign-key="LECTURE_COURSE_COURSE_TYPE_FKC">
                <column name="COURSE_TYPE_FK" sql-type="BIGINT"/>
            </key>
            <one-to-many class="org.openuss.lecture.CourseImpl"/>
        </bag>
        <many-to-one name="institute" class="org.openuss.lecture.InstituteImpl" foreign-key="LECTURE_COURSE_TYPE_INSTITUTEC" lazy="proxy" fetch="select">
            <column name="INSTITUTE_FK" not-null="false" sql-type="BIGINT"/>
        </many-to-one>
    </class>
</hibernate-mapping>