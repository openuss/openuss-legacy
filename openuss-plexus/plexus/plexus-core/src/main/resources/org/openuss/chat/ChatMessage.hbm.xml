<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-cascade="none">
    <class name="org.openuss.chat.ChatMessageImpl" table="CHAT_MESSAGE" dynamic-insert="false" dynamic-update="false">
        <id name="id" type="java.lang.Long" unsaved-value="null">
            <column name="ID" sql-type="BIGINT"/>
            <generator class="sequence">
                <param name="sequence">GLOBAL_SEQUENCE</param>
            </generator>
        </id>
        <property name="text" type="java.lang.String">
            <column name="TEXT" not-null="true" unique="false" sql-type="VARCHAR(4000)"/>
        </property>
        <property name="time" type="java.util.Date">
            <column name="msg_time" not-null="true" unique="false" sql-type="TIMESTAMP"/>
        </property>
        <property name="i18n" type="boolean">
            <column name="I18N" not-null="false" unique="false" sql-type="SMALLINT"/>
        </property>
        <many-to-one name="room" class="org.openuss.chat.ChatRoomImpl" cascade="save-update" foreign-key="CHAT_MESSAGE_ROOM_FKC" lazy="proxy" fetch="select">
            <column name="ROOM_FK" not-null="true" sql-type="BIGINT"/>
        </many-to-one>
        <many-to-one name="sender" class="org.openuss.chat.ChatUserImpl" foreign-key="CHAT_MESSAGE_SENDER_FKC" lazy="proxy" fetch="select">
            <column name="SENDER_FK" not-null="true" sql-type="BIGINT"/>
        </many-to-one>
    </class>
</hibernate-mapping>