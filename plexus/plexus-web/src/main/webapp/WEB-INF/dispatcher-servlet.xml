<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean name="/secured/course.xml*" class="org.openuss.web.servlets.feedservlets.CourseFeedController">	
		<property name="courseFeed"><ref bean="courseFeed"/></property>
	</bean>
	
	<bean name="/public/faculty.xml*" class="org.openuss.web.servlets.feedservlets.FacultyFeedController">	
		<property name="facultyFeed"><ref bean="facultyFeed"/></property>
		<property name="lectureService"><ref bean="lectureService"/></property>
	</bean>

	<bean name="/secured/discussion.xml*" class="org.openuss.web.servlets.feedservlets.DiscussionFeedController">	
		<property name="discussionFeed"><ref bean="discussionFeed"/></property>
	</bean>

	<bean name="/secured/mailinglist.xml*" class="org.openuss.web.servlets.feedservlets.MailingListFeedController">	
		<property name="mailingListFeed"><ref bean="mailingListFeed"/></property>
	</bean>

	<bean name="/secured/documents.xml*" class="org.openuss.web.servlets.feedservlets.DocumentsFeedController">	
		<property name="documentFeed"><ref bean="documentsFeed"/></property>
	</bean>
	
	<bean name="feedTemplate" abstract="true">
		<property name="systemService" ref="systemService"/>
	</bean>

	<bean name="courseFeed" class="org.openuss.web.feeds.CourseFeed" parent="feedTemplate">	
		<property name="courseService" ref="courseService"/>
		<property name="newsService" ref="newsService"/>
	</bean>

	<bean name="facultyFeed" class="org.openuss.web.feeds.FacultyFeed" parent="feedTemplate">	
		<property name="lectureService" ref="lectureService"/>
		<property name="newsService" ref="newsService"/>
	</bean>

	<bean name="discussionFeed" class="org.openuss.web.feeds.DiscussionFeed" parent="feedTemplate">	
		<property name="courseService" ref="courseService"/>
		<property name="discussionService" ref="discussionService"/>
	</bean>

	<bean name="mailingListFeed" class="org.openuss.web.feeds.MailingListFeed" parent="feedTemplate">	
		<property name="courseService" ref="courseService"/>
		<property name="courseMailingListService" ref="courseMailingListService"/>
	</bean>

	<bean name="documentsFeed" class="org.openuss.web.feeds.DocumentsFeed" parent="feedTemplate">	
		<property name="courseService" ref="courseService"/>
		<property name="documentService" ref="documentService"/>
		<property name="viewUri" value="/views/secured/documents/documents.faces"/>
	</bean>

</beans>
