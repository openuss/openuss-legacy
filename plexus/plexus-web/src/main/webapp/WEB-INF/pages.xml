<pages>
	<page view-id="/views/secured/lecture/*">
		<parameter name="faculty" value="#{faculty.id}" converterId="javax.faces.Long"/>
	</page>
	<page view-id="/views/secured/lecture/period*">
		<securityConstraint domainObject="#{faculty}" permissions="#{ACL.MANAGE_PERIODS}"/> 
		<parameter name="period" value="#{period.id}" converterId="javax.faces.Long"/>
	</page>
	
	<page view-id="/views/secured/enrollment/*">
		<parameter name="enrollment" value="#{enrollment.id}" converterId="javax.faces.Long"/>
	</page>

	<page view-id="/views/secured/enrollment/enrollment*">
		<securityConstraint domainObject="#{enrollment}" permissions="#{ACL.ASSIST}"/>
		<parameter name="enrollment" value="#{enrollment.id}" converterId="javax.faces.Long"/>
	</page>
	
	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
			Documents
	 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

	<page view-id="/views/secured/documents/*">
	 	<securityConstraint domainObject="#{documents_current_folder}" permissions="#{ACL.READ}"/>
		<securityConstraint domainObject="#{enrollment}" permissions="#{ACL.READ}"/>
		<parameter name="folder" value="#{documents_current_folder.id}" converterId="javax.faces.Long"/>
		<parameter name="enrollment" value="#{enrollment.id}" converterId="javax.faces.Long"/>
	</page>

	<page view-id="/views/secured/documents/folderedit.xhtml">
		<securityConstraint domainObject="#{documents_current_folder}" permissions="#{ACL.CRUD}"/>
	</page>

	<page view-id="/views/secured/documents/fileedit.xhtml">
		<securityConstraint domainObject="#{documents_current_folder}" permissions="#{ACL.CRUD}"/>
	</page>

	<page view-id="/views/secured/documents/addzip.xhtml">
		<securityConstraint domainObject="#{documents_current_folder}" permissions="#{ACL.CRUD}"/>
	</page>

	<page view-id="/views/secured/documents/remove.xhtml">
		<securityConstraint domainObject="#{documents_current_folder}" permissions="#{ACL.CRUD}"/>
	</page>

	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
			BrainContest
	 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

	<page view-id="/views/secured/braincontest/*">
		<securityConstraint domainObject="#{enrollment}" permissions="#{ACL.READ}"/>
		<parameter name="braincontest" value="#{braincontest_contest.id}" converterId="javax.faces.Long"/>
		<parameter name="enrollment" value="#{enrollment.id}" converterId="javax.faces.Long"/>
	</page>
	
	<page view-id="/views/secured/braincontest/braincontestnew.xhtml">
		<securityConstraint domainObject="#{enrollment}" permissions="#{ACL.ASSIST}"/>
	</page>

	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
			Discussion
	 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

	<page view-id="/views/secured/discussion/*">
		<securityConstraint domainObject="#{enrollment}" permissions="#{ACL.READ}"/>
		<parameter name="topic" value="#{discussion_topic.id}" converterId="javax.faces.Long"/>
		<parameter name="enrollment" value="#{enrollment.id}" converterId="javax.faces.Long"/>
	</page>
	

	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
			MailingList
	 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

	<page view-id="/views/secured/mailinglist/*">
		<securityConstraint domainObject="#{enrollment}" permissions="#{ACL.READ}"/>
		<parameter name="mail" value="#{mail.id}" converterId="javax.faces.Long"/>
	</page>

	<page view-id="/views/secured/mailinglist/newmail.xhtml">
		<securityConstraint domainObject="#{enrollment}" permissions="#{ACL.ASSIST}"/>
		<parameter name="mail" value="#{mail.id}" converterId="javax.faces.Long"/>
		<parameter name="enrollment" value="#{enrollment.id}" converterId="javax.faces.Long"/>
	</page>
	
	
	
	<page view-id="/views/secured/mailinglist/mailinglist.xhtml">
		<securityConstraint domainObject="#{enrollment}" permissions="#{ACL.READ}"/>
		<parameter name="enrollment" value="#{enrollment.id}" converterId="javax.faces.Long"/>
	</page>

	<page view-id="/views/secured/mailinglist/showsubscribers.xhtml">
		<securityConstraint domainObject="#{enrollment}" permissions="#{ACL.ASSIST}"/>
		<parameter name="enrollment" value="#{enrollment.id}" converterId="javax.faces.Long"/>
	</page>
	
	

	
	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
			News
	 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

	<page view-id="/views/public/news/*">
		<securityConstraint domainObject="#{news_selected_newsitem}" permissions="#{ACL.READ}"/>
		<parameter name="news" value="#{news_selected_newsitem.id}" converterId="javax.faces.Long"/>
	</page>
	
	
</pages>