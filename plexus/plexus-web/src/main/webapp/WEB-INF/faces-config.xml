<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN" "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>
	<lifecycle>
		<!-- There is a problem with the datascroller - for details see the class comments -->
		<phase-listener>
			org.openuss.framework.web.jsf.events.ConversationPhaseListener
		</phase-listener>
		<phase-listener>
			org.openuss.framework.web.jsf.events.ViewStackPhaseListener
		</phase-listener>
		<phase-listener>
			org.openuss.framework.web.jsf.events.PostRedirectGetPhaseListener
		</phase-listener>
		<!--
		<phase-listener>
			org.openuss.framework.web.jsf.events.DebugPhaseListener
		</phase-listener>
		 -->
		<phase-listener>
			org.openuss.framework.web.jsf.pages.PagePhaseListener
		</phase-listener>
		<phase-listener>
			org.openuss.framework.web.jsf.model.PagedListPhaseListener
		</phase-listener>
	</lifecycle>

	<application>
		<navigation-handler>
			org.openuss.framework.web.jsf.application.RedirectNavigationHandler
		</navigation-handler>
		<view-handler>org.openuss.framework.web.facelets.DynamicViewHandler</view-handler>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>de</supported-locale>
			<supported-locale>zh</supported-locale>
		</locale-config>
		<message-bundle>resources</message-bundle>
	</application>

	<render-kit>
		<description>
			Some replacements for the standard renderers
		</description>
		<renderer>
			<description>
				Replacement renderer for h:outputLabel
			</description>
			<component-family>javax.faces.Output</component-family>
			<renderer-type>javax.faces.Label</renderer-type>
			<renderer-class>
				org.openuss.framework.web.jsf.renderer.LabelRenderer
			</renderer-class>
		</renderer>
	</render-kit>

	<converter>
		<description>Converts a InstituteGroup object to a string and vice versa</description>
		<display-name>InstituteGroupConverter</display-name>
		<converter-id>instituteGroupConverter</converter-id>
		<converter-class>org.openuss.web.lecture.InstituteGroupConverter</converter-class>
	</converter>
	
	 <converter>
    	<description>Converts a DepartmentType object to a string representation and vice versa</description>
    	<display-name>DepartmentTypeConverter</display-name>
    	<converter-for-class>org.openuss.lecture.DepartmentType</converter-for-class>
    	<converter-class>org.openuss.web.lecture.converter.DepartmentTypeConverter</converter-class>
    </converter>
    
	
	<converter>
		<description>Sanitize text inputs against cross scripting attacks</description>
		<display-name>HtmlInputFilterConverter</display-name>
		<converter-id>xssFilter</converter-id>
		<converter-class>org.openuss.web.utils.HtmlInputFilterConverter</converter-class>
	</converter>

    <converter>
    	<description>Converts a UniversityType object to a string representation and vice versa</description>
    	<display-name>UniversityTypeConverter</display-name>
    	<converter-for-class>org.openuss.lecture.UniversityType</converter-for-class>
    	<converter-class>org.openuss.web.lecture.converter.UniversityTypeConverter</converter-class>
    </converter>
	
	<!-- - - - - - - - - - - - - - - - - - - - - - 
	    S H A L E  -  C O N F I G U R A T I O N 
	   - - - - - - - - - - - - - - - - - - - - - -->
	
	<managed-bean>
		<managed-bean-name>org$apache$shale$view$EXCEPTION_HANDLER</managed-bean-name>
		<managed-bean-class>org.openuss.web.application.DefaultExceptionHandler</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	
	<component>
    	<description>
        	Extending the UIViewRoot to provide specialized exception
        	handling needed for the Shale view controller to enforce the contracts
        	of the callbacks.
      	</description>
      	<component-type>javax.faces.ViewRoot</component-type>
      	<component-class>org.openuss.web.application.DefaultViewRoot</component-class>
  	</component>

    <component>
        <component-type>org.apache.myfaces.HtmlSelectManyPicklist</component-type>
        <component-class>org.apache.myfaces.custom.picklist.HtmlSelectManyPicklist</component-class>
    </component>	

</faces-config>

