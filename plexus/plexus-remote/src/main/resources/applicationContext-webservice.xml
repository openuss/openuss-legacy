<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:cxf="http://cxf.apache.org/core"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="lectureWebServiceImpl" class="org.openuss.services.LectureWebServiceImpl">
		<property name="securityService" ref="securityService"/>
		<property name="courseService" ref="courseService"/>
		<property name="courseTypeService" ref="courseTypeService"/>
		<property name="instituteService" ref="instituteService"/>
		<property name="departmentService" ref="departmentService"/>
		<property name="universityService" ref="universityService"/>
	</bean>

	<bean id="lectureWS" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces">
			<list><value>org.openuss.services.LectureWebService</value></list>
		</property>
		<property name="target">
			<bean parent="lectureWebServiceImpl"/>
		</property>
		<property name="interceptorNames">
			<list>
				<value>lectureLogicExceptionAdvisor</value>
			</list>
		</property>
	</bean>
	  
	<bean id="lectureLogicExceptionAdvisor"	class="org.springframework.aop.support.DefaultPointcutAdvisor">
		<property name="advice">
			<bean class="org.openuss.services.LectureLogicExceptionAdvice" />
		</property>
	</bean>
		  
	  
</beans>