	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.openuss.plexus</groupId>
		<artifactId>plexus</artifactId>
		<version>3.0-SNAPSHOT</version>
	</parent>
	<artifactId>plexus-core</artifactId>
	<name>Plexus - Core</name>
	<packaging>jar</packaging>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-clover-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
					<executions>
		          		<execution>
		          			<id>generate-test-database</id>
				           	<phase>generate-test-sources</phase>
				           	<configuration>
				             	<tasks>
 								   <echo message="INFO: exporting database schemas..." />
							       <taskdef  name="schemaexport" classname="org.hibernate.tool.hbm2ddl.SchemaExportTask">
							        	<classpath>
											<pathelement location="${settings.localRepository}/org/hibernate/hibernate/3.2.2.ga/hibernate-3.2.2.ga.jar"/>
											<pathelement location="${settings.localRepository}/commons-logging/commons-logging/1.1/commons-logging-1.1.jar"/>
											<pathelement location="${settings.localRepository}/commons-collections/commons-collections/3.1/commons-collections-3.1.jar"/>
											<pathelement location="${settings.localRepository}/dom4j/dom4j/1.6.1/dom4j-1.6.1.jar"/>
											<pathelement location="./target/classes" />
											<pathelement location="../plexus-api/target/classes" />
								        </classpath>
							        </taskdef >
									<taskdef name="recreateDB" classname="org.openuss.framework.tools.db.DatabaseSetupTask">
										<classpath>
											<pathelement location="${settings.localRepository}/jaybird/jaybird-full/2.1.1/jaybird-full-2.1.1.jar"/>
											<pathelement location="${settings.localRepository}/ant/ant/1.6.5/ant-1.6.5.jar"/>
											<pathelement location="${settings.localRepository}/org/openuss/framework/framework-tools/3.0-SNAPSHOT/framework-tools-3.0-SNAPSHOT.jar" />
										</classpath>
									</taskdef>
							        <schemaexport output="target/firebird_database_schema.sql" 
							        	create="true" 
							        	text="true"
							        	delimiter=";"
							        	properties="hibernate-export-schema.properties">
										<fileset id="hibernate.mapping.files" dir="target/classes">
											<include name="**/*.hbm.xml" />
										</fileset>
							        </schemaexport>				             	
									<recreateDB dbserverurl="localhost" 
												dbserverport="3050"
											    dbname="openuss30-test"
											    dbuser="sysdba"
											    dbpassword="masterkey"/>
									<echo message="INFO: Creating database schemas..." />
									<sql driver="org.firebirdsql.jdbc.FBDriver" url="jdbc:firebirdsql:localhost:openuss30-test"
										userid="sysdba"
										password="masterkey"
										autocommit="true">
										<classpath>
											<pathelement location="${settings.localRepository}/jaybird/jaybird-full/2.1.1/jaybird-full-2.1.1.jar"/>
										</classpath>
										<transaction src="target/firebird_database_schema.sql"/>
										<transaction src="src/main/data/init.sql"/>
									</sql>
									<echo message="INFO: Database schemas created" />				             	
				             	</tasks>
				           	</configuration>
				           <goals>
				             <goal>run</goal>
				           </goals>
				         </execution>
		        	</executions>
		      </plugin>
		</plugins>
	</build>

