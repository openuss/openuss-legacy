<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-cascade="none">
    <class name="org.openuss.lecture.CourseMemberImpl" table="LECTURE_COURSE_MEMBER" dynamic-insert="false" dynamic-update="false">
        <cache usage="nonstrict-read-write" />
        <composite-id name="courseMemberPk" class="org.openuss.lecture.CourseMemberPK">
            <key-many-to-one name="course" class="org.openuss.lecture.CourseImpl" >
                <column name="COURSE_ID" sql-type="BIGINT"/>
            </key-many-to-one>
            <key-many-to-one name="user" class="org.openuss.security.UserImpl" >
                <column name="USER_ID" sql-type="BIGINT"/>
            </key-many-to-one>
        </composite-id>   
        <property name="memberType" type="org.openuss.lecture.CourseMemberTypeEnum">
            <column name="MEMBER_TYPE" not-null="true" unique="false" sql-type="INTEGER"/>
        </property>
    </class>
</hibernate-mapping>