<?xml version="1.0" encoding="UTF-8"?>

<project name="OpenUSS_Hibernate" basedir="." default="schemaexport">

	<property name="build.dir" location="${basedir}/bin" />
	<property name="lib.dir" location="${basedir}/lib" />

	<path id="schemaexport.classpath">
		<path>
			<fileset dir="${lib.dir}">
				<include name="**/*.jar" />
			</fileset >
			<pathelement path="${build.dir}" />
		</path>
	</path>

	<target name="schemaexport">
		<taskdef name="schemaexport" classname="org.hibernate.tool.hbm2ddl.SchemaExportTask" classpathref="schemaexport.classpath"/>
		<schemaexport
			config="${build.dir}/hibernate.cfg.xml"
			quiet="no"
			text="yes"
			delimiter=";"
			output="schema-export.sql">
		</schemaexport>
	</target>
</project>